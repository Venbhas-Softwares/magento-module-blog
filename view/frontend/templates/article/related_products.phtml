<?php
/**
 * @var $block \Venbhas\Article\Block\Frontend\RelatedProducts
 * @var \Magento\Framework\Escaper $escaper
 */
$products = $block->getRelatedProducts();
if (empty($products)) {
    return;
}
?>
<div class="article-related-products">
    <h3><?= $escaper->escapeHtml(__('Related Products')) ?></h3>
    <div class="article-related-products-slider">
        <button type="button" class="action article-related-slider-prev" aria-label="<?= $escaper->escapeHtmlAttr(__('Previous')) ?>">&larr;</button>
        <div class="article-related-products-track">
            <ol class="products list items product-items">
                <?php foreach ($products as $_product): ?>
                    <li class="item product product-item">
                        <div class="product-item-info">
                            <a href="<?= $escaper->escapeUrl($_product->getProductUrl()) ?>"
                               class="product photo product-item-photo">
                                <img src="<?= $escaper->escapeUrl($block->getProductImageUrl((int) $_product->getId())) ?>" alt="<?= $escaper->escapeHtml($_product->getName()) ?>" />
                            </a>
                            <div class="product details product-item-details">
                                <strong class="product name product-item-name">
                                    <a href="<?= $escaper->escapeUrl($_product->getProductUrl()) ?>">
                                        <?= $escaper->escapeHtml($_product->getName()) ?>
                                    </a>
                                </strong>
                                <?= $block->getProductPrice($_product) ?>
                            </div>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
        </div>
        <button type="button" class="action article-related-slider-next" aria-label="<?= $escaper->escapeHtmlAttr(__('Next')) ?>">&rarr;</button>
    </div>
</div>
<script>
require(['jquery', 'Venbhas_Article/js/article-related-slider'], function ($, slider) {
    slider({ selector: '.article-related-products-slider' });
});
</script>

